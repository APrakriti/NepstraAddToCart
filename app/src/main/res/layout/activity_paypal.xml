<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sonika.nepstra.PaypalActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Amount:"
            android:textColor="#000000"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonPay"
            android:text="Paypal "
            android:textColor="@color/colorAppWhite"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/add_to_cart_button_design"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonbank"
            android:text="Direct Bank Transfer "
            android:background="@drawable/add_to_cart_button_design"
            android:textColor="@color/colorAppWhite"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonCash"
            android:text="Cash on delivery "
            android:textColor="@color/colorAppWhite"
            android:layout_width="wrap_content"
            android:background="@drawable/add_to_cart_button_design"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
